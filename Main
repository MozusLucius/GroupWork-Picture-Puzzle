import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class Main extends JFrame implements ActionListener {

    JLabel forBack, forCredits;
    JPanel con, forTitle, forTitle2, forLevels, forSettings, forGuide;
    JButton levels, settings, guide, credits;
    Pictures pics = new Pictures();
    Main(){
        forBack = new JLabel(new ImageIcon("src\\Coding\\GIF\\piczzle.gif"));
        forBack.setLayout(new BorderLayout());

        this.setTitle("Piczzle");
        ImageIcon piku = new ImageIcon("src\\Coding\\piku.png");
        setExtendedState(MAXIMIZED_BOTH);
        this.setIconImage(piku.getImage());
        this.setSize(1460, 760);
        this.setLocation(190, 90);
        this.setResizable(true);
        this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        this.getContentPane().setBackground(new Color(0xf5b982));
        this.setLayout(new BorderLayout());

        con = new JPanel(new GridLayout(0,1)); con.setOpaque(false);
        credits = new JButton(pics.picCredits); credits.setFont(new Font("Berlin Sans FB Demi", Font.BOLD, 30));
        credits.setPreferredSize(new Dimension(60,60));
        credits.setBorderPainted(false); credits.setContentAreaFilled(false); credits.setFocusPainted(false);
        credits.addActionListener(this);
        //all buttons
        levels = new JButton(pics.picLevels);
        levels.setPreferredSize(new Dimension(386,125));
        levels.setBorderPainted(false); levels.setContentAreaFilled(false); levels.setFocusPainted(false);
        levels.addActionListener(this);
        guide = new JButton(pics.picHow);
        guide.setPreferredSize(new Dimension(386,125));
        guide.setBorderPainted(false); guide.setContentAreaFilled(false); guide.setFocusPainted(false);
        guide.addActionListener(this);
        settings = new JButton(pics.picSettings);
        settings.setPreferredSize(new Dimension(386,125));
        settings.setBorderPainted(false); settings.setContentAreaFilled(false); settings.setFocusPainted(false);
        settings.addActionListener(this);
        //all panels to ensure a centered layout for the window
        forTitle = new JPanel(new FlowLayout(FlowLayout.RIGHT));
        forLevels = new JPanel(new FlowLayout(FlowLayout.CENTER, 0, 70));
        forGuide = new JPanel(new FlowLayout(FlowLayout.CENTER, 0, 55));
        forSettings = new JPanel(new FlowLayout(FlowLayout.CENTER,0,35));
        forTitle.setOpaque(false); forLevels.setOpaque(false); forSettings.setOpaque(false); forGuide.setOpaque(false);
        forTitle.add(credits); forLevels.add(levels); forGuide.add(guide); forSettings.add(settings);

        //credits
        forCredits = new JLabel(new ImageIcon("src/Coding/toothless.gif"));
        forCredits.setLayout(new BorderLayout());
        forTitle2 = new JPanel(new FlowLayout(FlowLayout.RIGHT));
        forCredits.add(forTitle2, BorderLayout.NORTH);

        con.add(forTitle);
        con.add(forLevels);
        con.add(forGuide);
        con.add(forSettings);
        forBack.add(con);
        setContentPane(forBack);
        this.setVisible(true);
    }
    @Override
    public void actionPerformed(ActionEvent e){
        Tunog.playBMusic();
        if(e.getSource() == levels){
            new Levels();
            dispose();
        } else if (e.getSource() == guide) {
            new Guide();
            dispose();
        } else if (e.getSource() == settings) {
            new Settings();
            dispose();
        }
        if (e.getSource() == credits){
            if (forBack.isVisible()) {
                forBack.setVisible(false);
                remove(forBack);
                setContentPane(forCredits);
                forTitle2.add(credits);
                forCredits.setVisible(true);
                setVisible(true);
            } else if (forCredits.isVisible()) {
                forCredits.setVisible(false);
                remove(forCredits);
                setContentPane(forBack);
                forTitle.add(credits);
                forBack.setVisible(true);
                setVisible(true);
            }
        }
    }

    public static void main (String[] args){
        new Main();
        Tunog.playBGMusic();
    }
}

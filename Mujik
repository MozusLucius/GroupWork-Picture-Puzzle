import java.io.File;
import java.io.IOException;
import javax.sound.sampled.*;

public class Mujik {

    Mujik(){
        System.out.println("Mujik class called.");
    }
    //src/Coding/Musika/Mingle.wav
    public void playBGM(){
        try {
            Clip c = AudioSystem.getClip();
            c.open(AudioSystem.getAudioInputStream(new File("src\\Coding\\Musika\\Mingle.wav")));
            c.loop(Clip.LOOP_CONTINUOUSLY);
            c.start();
        } catch (LineUnavailableException|IOException|UnsupportedAudioFileException e){
            e.printStackTrace();
        }
    }
    public void soundButton(){
        //sound button is for all buttons except play buttons (b1-b9) and icon
        try {
            Clip c = AudioSystem.getClip();
            c.open(AudioSystem.getAudioInputStream(new File("src\\Coding\\Musika\\Hard.wav")));
            c.start();
        } catch (LineUnavailableException|IOException|UnsupportedAudioFileException e){
            e.printStackTrace();
        }

    }

    public void soundIcon(){

    }

    public void soundPlayButtons(){
        //b1-b9
        try {
            Clip c = AudioSystem.getClip();
            c.open(AudioSystem.getAudioInputStream(new File("src\\Coding\\Musika\\Switch.wav")));
            c.start();
        } catch (LineUnavailableException|IOException|UnsupportedAudioFileException e){
            e.printStackTrace();
        }
    }

    public void soundComplete(){
        try {
            Clip c = AudioSystem.getClip();
            c.open(AudioSystem.getAudioInputStream(new File("src\\Coding\\Musika\\Complete.wav")));
            c.start();
        } catch (LineUnavailableException|IOException|UnsupportedAudioFileException e){
            e.printStackTrace();
        }
    }

    public void soundFail(){
        try {
            Clip c = AudioSystem.getClip();
            c.open(AudioSystem.getAudioInputStream(new File("src\\Coding\\Musika\\Fail.wav")));
            c.start();
        } catch (LineUnavailableException|IOException|UnsupportedAudioFileException e){
            e.printStackTrace();
        }
    }

}

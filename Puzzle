    //Classes call
    Game game = new Game(this);
    Tunog m = new Tunog();
    String [] response1 = {"Next Level", "Replay", "Back to Levels"};
    String [] response2 = {"Replay", "Back to Levels"};
    String [] response3 = {"Yes", "Replay this Level", "Back to Levels"};
    Levels levels;

    Puzzle(Levels levels){

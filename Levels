import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class Levels extends JFrame implements ActionListener {
    JLabel forBack;
    JPanel mainCon, con, forMenu, forTitle, forLevel1, forLevel2, forLevel3, forLevel4, forLevel5;
    JButton level1, level2, level3, level4, level5, mainM;
    static boolean unlock2 = false;
    static boolean unlock3 = false;
    static boolean unlock4 = false;
    static boolean unlock5 = false;
    Pictures pics = new Pictures();

    Levels(){
        forBack = new JLabel(new ImageIcon("src\\Coding\\GIF\\Stay Tuned.gif"));
        forBack.setLayout(new BorderLayout(0,0));

        setTitle("Piczzle");
        ImageIcon piku = new ImageIcon("src\\Coding\\piku.png");
        setIconImage(piku.getImage());
        setExtendedState(MAXIMIZED_BOTH);
        setSize(1460, 760);
        setLocation(190, 90);
        setResizable(true);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        getContentPane().setBackground(new Color(0xf5b982));
        setLayout(new BorderLayout(0, 0) );

        mainCon = new JPanel(new BorderLayout()); mainCon.setOpaque(false);
        con = new JPanel();
        con.setOpaque(false);
        con.setLayout(new GridLayout(0, 1, 0, 0));

        forMenu = new JPanel(new FlowLayout(FlowLayout.LEADING));
        forMenu.setOpaque(false);
        mainM = new JButton(new ImageIcon("src/Coding/Buttons/back.png"));
        mainM.setPreferredSize(new Dimension(80,51));
        mainM.setBorderPainted(false); mainM.setContentAreaFilled(false); mainM.setFocusPainted(false);
        mainM.addActionListener(this);
        forMenu.add(mainM);

        //all buttons
        level1 = new JButton(pics.picLevel1);
        level1.setFont(new Font("Copperplate Gothic Bold", Font.PLAIN, 30)); level1.setFocusable(false); level1.setBackground(Color.BLACK);
        level1.setPreferredSize(new Dimension(500,121)); level1.addActionListener(this); level1.setForeground(Color.LIGHT_GRAY);
        level1.setBorderPainted(false); level1.setContentAreaFilled(false); level1.setFocusPainted(false);
        level2 = new JButton(pics.picLocked);
        level2.setFont(new Font("Copperplate Gothic Bold", Font.PLAIN, 30)); level2.setFocusable(false); level2.setBackground(Color.BLACK);
        level2.setPreferredSize(new Dimension(500,121)); level2.setForeground(Color.LIGHT_GRAY); //level2.addActionListener(this);
        level2.setBorderPainted(false); level2.setContentAreaFilled(false); level2.setFocusPainted(false);
        level3 = new JButton(pics.picLocked);
        level3.setFont(new Font("Copperplate Gothic Bold", Font.PLAIN, 30)); level3.setFocusable(false); level3.setBackground(Color.BLACK);
        level3.setPreferredSize(new Dimension(500,121)); level3.setForeground(Color.LIGHT_GRAY); //level3.addActionListener(this);
        level3.setBorderPainted(false); level3.setContentAreaFilled(false); level3.setFocusPainted(false);
        level4 = new JButton(pics.picLocked);
        level4.setFont(new Font("Copperplate Gothic Bold", Font.PLAIN, 30)); level4.setFocusable(false); level4.setBackground(Color.BLACK);
        level4.setPreferredSize(new Dimension(500,121)); level4.setForeground(Color.LIGHT_GRAY); //level4.addActionListener(this);
        level4.setBorderPainted(false); level4.setContentAreaFilled(false); level4.setFocusPainted(false);
        level5 = new JButton(pics.picLocked);
        level5.setFont(new Font("Copperplate Gothic Bold", Font.PLAIN, 30)); level5.setFocusable(false); level5.setBackground(Color.BLACK);
        level5.setPreferredSize(new Dimension(500,121)); level5.setForeground(Color.LIGHT_GRAY); //level5.addActionListener(this);
        level5.setBorderPainted(false); level5.setContentAreaFilled(false); level5.setFocusPainted(false);
        //level5.addActionListener(this); level5.setIcon(pics.picLevel5);

        //all panels to ensure a centered layout for the window
        forTitle = new JPanel(new FlowLayout(FlowLayout.CENTER));
        forLevel1 = new JPanel(new FlowLayout(FlowLayout.CENTER, 0, 0));
        forLevel2 = new JPanel(new FlowLayout(FlowLayout.CENTER, 0, 0));
        forLevel3 = new JPanel(new FlowLayout(FlowLayout.CENTER,0,0));
        forLevel4 = new JPanel(new FlowLayout(FlowLayout.CENTER,0,0));
        forLevel5 = new JPanel(new FlowLayout(FlowLayout.CENTER,0,0));
        forTitle.setOpaque(false); forLevel1.setOpaque(false); forLevel2.setOpaque(false); forLevel3.setOpaque(false); forLevel4.setOpaque(false); forLevel5.setOpaque(false);
        forLevel1.add(level1); forLevel2.add(level2); forLevel3.add(level3); forLevel4.add(level4); forLevel5.add(level5);

        mainCon.add(forMenu, BorderLayout.NORTH);
        mainCon.add(con, BorderLayout.CENTER);
        con.add(forTitle); con.add(forLevel1);
        con.add(forLevel2); con.add(forLevel3);
        con.add(forLevel4); con.add(forLevel5);

        forBack.add(mainCon);
        setContentPane(forBack);
        setVisible(true);
        levelUnlocked();
    }

    public void levelUnlocked(){
        if (unlock2) {level2.addActionListener(this); level2.setIcon(pics.picLevel2);}
        if (unlock3) {level3.addActionListener(this); level3.setIcon(pics.picLevel3);}
        if (unlock4) {level4.addActionListener(this); level4.setIcon(pics.picLevel4);}
        if (unlock5) {level5.addActionListener(this); level5.setIcon(pics.picLevel5);}
    }

    @Override
    public void actionPerformed(ActionEvent e){
        Tunog.playBMusic();
        if(e.getSource() == mainM){
            dispose();
            new Main();
        } else if(e.getSource() == level1){
            Tunog.stopBGMusic();
            Puzzle p = new Puzzle(this);
            Tunog.playPGMusic();
            p.game.Level1();
            dispose();
        } else if (e.getSource() == level2){
            Tunog.stopBGMusic();
            Puzzle p = new Puzzle(this);
            Tunog.playPGMusic();
            p.game.Level2();
            dispose();
        } else if (e.getSource() == level3){
            Tunog.stopBGMusic();
            Puzzle p = new Puzzle(this);
            Tunog.playPGMusic();
            p.game.Level3();
            dispose();
        } else if (e.getSource() == level4){
            Tunog.stopBGMusic();
            Puzzle p = new Puzzle(this);
            Tunog.playPGMusic();
            p.game.Level4();
            dispose();
        } else if (e.getSource() == level5){
            Tunog.stopBGMusic();
            Puzzle p = new Puzzle(this);
            Tunog.playPGMusic();
            p.game.Level5();
            dispose();
        }
    }
    public static void main (String[] args){
        new Levels();
    }
}
